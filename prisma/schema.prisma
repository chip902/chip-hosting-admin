generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int         @id @default(autoincrement())
  email       String      @unique
  name        String?
  timeEntries TimeEntry[]
  projects    Project[]   @relation("ProjectUser")
}

model Customer {
  id          Int         @id @default(autoincrement())
  name        String      @db.VarChar(255)
  email       String      @db.VarChar(255)
  defaultRate Float
  color       String?
  dateCreated DateTime    @default(now())
  invoices    Invoice[]
  projects    Project[]
  timeEntries TimeEntry[]
}

model Project {
  id           Int            @id @default(autoincrement())
  name         String
  description  String?
  customerId   Int
  dateCreated  DateTime       @default(now())
  rate         Float?
  customer     Customer       @relation(fields: [customerId], references: [id])
  tasks        Task[]         @relation("ProjectTasks")
  users        User[]         @relation("ProjectUser")
  ProjectTasks ProjectTasks[]
  TimeEntry    TimeEntry[]
}

model Task {
  id           Int            @id @default(autoincrement())
  name         String
  description  String?
  dateCreated  DateTime       @default(now())
  rate         Float?
  projects     Project[]      @relation("ProjectTasks")
  timeEntries  TimeEntry[]
  ProjectTasks ProjectTasks[]
}

model ProjectTasks {
  projectId Int
  taskId    Int
  project   Project @relation(fields: [projectId], references: [id])
  task      Task    @relation(fields: [taskId], references: [id])

  @@id([projectId, taskId])
}

model Invoice {
  id          Int           @id @default(autoincrement())
  customerId  Int
  totalAmount Float
  dateCreated DateTime      @default(now())
  timeEntries TimeEntry[]   @relation("InvoiceTimeEntries")
  Customer    Customer      @relation(fields: [customerId], references: [id])
  InvoiceItem InvoiceItem[]
  pdfPath     String?
}

model TimeEntry {
  id            Int          @id @default(autoincrement())
  description   String?
  duration      Int
  date          DateTime
  userId        Int
  taskId        Int
  customerId    Int
  projectId     Int
  User          User         @relation(fields: [userId], references: [id])
  Customer      Customer     @relation(fields: [customerId], references: [id])
  Project       Project      @relation(fields: [projectId], references: [id])
  Task          Task         @relation(fields: [taskId], references: [id])
  InvoiceItem   InvoiceItem? @relation(fields: [invoiceItemId], references: [id])
  invoiceItemId Int?
  invoiceId     Int?
  invoice       Invoice?     @relation(fields: [invoiceId], references: [id], name: "InvoiceTimeEntries", map: "TimeEntry_InvoiceTimeEntries_fkey")
  isInvoiced    Boolean      @default(false)
}

model InvoiceItem {
  id          Int         @id @default(autoincrement())
  description String
  quantity    Int
  unitPrice   Float
  invoiceId   Int
  invoice     Invoice     @relation(fields: [invoiceId], references: [id])
  timeEntries TimeEntry[]
}
